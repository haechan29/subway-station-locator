<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.hc.subway_station_locator.presentation.view_model.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_backSubwayStation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_r100"
            app:backgroundTint="@{viewModel.subwayStationRoute.valueOnSet.currentSubwayStationLineNumberColor}"
            tools:backgroundTint="#ffff0000"
            tools:text="성수역"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/view_currentSubwayStationBackground"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_r100_s2_b_ffffff"
            app:backgroundTint="@{viewModel.subwayStationRoute.valueOnSet.currentSubwayStationLineNumberColor}"
            tools:backgroundTint="#FFFF0000"
            app:layout_constraintTop_toTopOf="@id/textView_backSubwayStation"
            app:layout_constraintBottom_toBottomOf="@id/textView_backSubwayStation"
            app:layout_constraintStart_toStartOf="@id/textView_backSubwayStation"
            app:layout_constraintEnd_toEndOf="@id/textView_backSubwayStation" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_currentSubwayStation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_r100_s2_b_ffffff"
            android:text="@{viewModel.subwayStationRoute.isSet ? viewModel.subwayStationRoute.valueOnSet.currentSubwayStation.name : @string/empty_string}"
            tools:text="성수역"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="2dp"
            app:layout_constraintTop_toTopOf="@id/view_currentSubwayStationBackground"
            app:layout_constraintBottom_toBottomOf="@id/view_currentSubwayStationBackground"
            app:layout_constraintStart_toStartOf="@id/view_currentSubwayStationBackground"
            app:layout_constraintEnd_toEndOf="@id/view_currentSubwayStationBackground" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_previousSubwayStation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="@{(_) -> viewModel.seePreviousSubwayStation()}"
            app:layout_constraintTop_toTopOf="@id/textView_backSubwayStation"
            app:layout_constraintBottom_toBottomOf="@id/textView_backSubwayStation"
            app:layout_constraintStart_toStartOf="@id/textView_backSubwayStation"
            app:layout_constraintEnd_toStartOf="@id/textView_currentSubwayStation">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_previousSubwayStation"
                android:layout_width="12sp"
                android:layout_height="12sp"
                app:isInvisible="@{viewModel.subwayStationRoute.valueOnSet.isFirstSubwayStationOnRoute}"
                android:background="@drawable/ic_arrow_back_24px"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_previousSubwayStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.subwayStationRoute.valueOnSet.previousSubwayStation.name ?? @string/departure_subway_station}"
                tools:text="뚝섬역"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageView_previousSubwayStation"
                android:layout_marginStart="2dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_nextSubwayStation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="@{(_) -> viewModel.seeNextSubwayStation()}"
        app:layout_constraintTop_toTopOf="@id/textView_backSubwayStation"
        app:layout_constraintBottom_toBottomOf="@id/textView_backSubwayStation"
        app:layout_constraintEnd_toEndOf="@id/textView_backSubwayStation"
        app:layout_constraintStart_toEndOf="@id/textView_currentSubwayStation">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_nextSubwayStation"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_arrow_forward_24px"
                android:backgroundTint="@color/white"
                app:isInvisible="@{viewModel.subwayStationRoute.valueOnSet.isLastSubwayStationOnRoute()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_nextSubwayStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.subwayStationRoute.valueOnSet.nextSubwayStation.name ?? @string/arrival_subway_station}"
                tools:text="건대입구역"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imageView_nextSubwayStation"
                android:layout_marginEnd="2dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>