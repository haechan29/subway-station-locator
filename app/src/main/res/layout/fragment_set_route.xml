<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.hc.subway_station_locator.presentation.view_model.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"/>
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp"/>
    
        <TextView
            android:id="@+id/textView_setRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이동 경로를 선택해주세요"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/textView_departureSubwayStation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_r4_efefef"
            android:onClick="@{(_) -> viewModel.startSetDepartureSubwayStation()}"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="@{viewModel.departureSubwayStation.valueOnSet.name ?? @string/departure_subway_station}"
            android:textColor="@{viewModel.departureSubwayStation.isSet ? @color/black : @color/black_500}"
            android:textSize="@dimen/text_size_middle"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/textView_setRoute"
            tools:text="@string/departure_subway_station"
            tools:textColor="@color/black_500" />

        <TextView
            android:id="@+id/textView_arrivalSubwayStation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.arrivalSubwayStation.valueOnSet.name ?? @string/arrival_subway_station}"
            tools:text="@string/arrival_subway_station"
            android:textColor="@{viewModel.arrivalSubwayStation.isSet ? @color/black : @color/black_500}"
            tools:textColor="@color/black_500"
            android:textSize="@dimen/text_size_middle"
            android:background="@drawable/shape_r4_efefef"
            android:onClick="@{(_) -> viewModel.startSetArrivalSubwayStation()}"
            app:layout_constraintTop_toBottomOf="@id/textView_departureSubwayStation"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="선택 완료"
            android:textSize="@dimen/text_size_middle"
            app:isActivated="@{viewModel.departureSubwayStation.isSet &amp;&amp; viewModel.arrivalSubwayStation.isSet }"
            android:onClick="@{(_) -> viewModel.finishSetRoute()}"
            android:paddingVertical="8dp"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>