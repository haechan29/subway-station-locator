<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="subwayStationInformationTitle"
            type="String" />

        <variable
            name="subwayStationInformationContent"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_r4_efefef"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_subwayStationInformationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{subwayStationInformationTitle}"
            tools:text="타이틀"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_middle"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_subwayStationInformationContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{subwayStationInformationContent}"
            tools:text="컨텐트"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_super_large"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_subwayStationInformationTitle"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>